/* 关闭按钮样式 */
body .layer-ext-jwb .layui-layer-setwin{right:20px;top:18px;}
body .layer-ext-jwb .layui-layer-setwin .layui-layer-close{background: url(shut_icon.png) no-repeat center center !important;}

/* 底部遮罩层样式 */
.layui-layer-shade{background-color: #192942 !important;opacity:0.6 !important; filter:alpha(opacity=60) !important;}

/* 自定义样式 */
/*删除成功*/
body .layer-ext-jwb .success_infor{text-align: center;padding: 45px 0 0 0;}
body .layer-ext-jwb .success_infor .icon_suc{width: 58px; height: 58px; display: inline-block; background: url(icon_ok.png) no-repeat 0 0;}
body .layer-ext-jwb .success_infor .suc_txt{font-size: 14px; color: #192942; margin:15px 0 0 0;}

/*警示框*/
body .layer-ext-jwb .success_infor .icon_warn{width: 58px; height: 58px; display: inline-block; background: url(icon_warn.png) no-repeat 0 0;}

/*失败框*/
body .layer-ext-jwb .success_infor .icon_failed{width: 58px; height: 58px; display: inline-block; background: url(icon_failed.png) no-repeat 0 0;}

