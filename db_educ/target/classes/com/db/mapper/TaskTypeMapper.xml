<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.service.TaskTypeService">
	<resultMap type="com.db.entity.TaskType" id="TaskTypeMap">
		<result column="type_id" property="typeId" jdbcType="INTEGER" />
		<result column="tasktype_name" property="taskTypeName" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" />

	</resultMap>

<!-- 考试类型列表  -->
<select id="taskType" resultMap="TaskTypeMap">
      select * from td_task_type
</select>
<select id="getCount" resultType="int">
   select count(*) from td_task_type where 1=1
   <if test="tasktypeName !=null and tasktypeName !=''">
      and tasktype_name like CONCAT('%','${tasktypeName}','%')
   </if>
</select>
<select id="taskTypeList" resultMap="TaskTypeMap">
     select * from td_task_type where 1=1
      <if test="tasktypeName !=null and tasktypeName !=''">
      and tasktype_name like CONCAT('%','${tasktypeName}','%')
   </if>
      order by create_time desc limit #{pageNo},#{pageSize}
</select>
<delete id="deletetypeTask" parameterType="Integer">
    delete from td_task_type where type_id=#{typeId}
</delete>
<insert id="addTask" parameterType="com.db.entity.TaskType">
   insert into td_task_type (tasktype_name,create_time) 
         values(#{taskTypeName},#{createTime})
</insert>
<select id="getTaskName" resultMap="TaskTypeMap">
 select * from td_task_type where tasktype_name=#{tasktypeName}
</select>

<select id="getTaskById" resultMap="TaskTypeMap">
    select * from td_task_type where type_id=#{typeId}
</select>
<update id="updateTask" parameterType="com.db.entity.TaskType">
  update td_task_type set tasktype_name=#{taskTypeName} where type_id=#{typeId}
</update>
<select id="getTypeList" resultMap="TaskTypeMap">
 select * from td_task_type where type_id &lt;&gt;4
</select>
</mapper>